<!DOCTYPE html>
<html lang="en">
<%- include ("templates/head", {}) %>
<body>
    <div class="container" style="margin-top: 30px;">
        <h3 class="mt-10 text-primary">Estos son todos los productos</h3>
        <% if(data.length > 0){ %>
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: rgba(13, 110, 253);"> <th>Titulo</th> <th>Precio</th> <th>Imagen</th> </tr>
                        <% data.forEach(function(pto){ %>
                            <tr>
                                <td> <%= pto.titulo %> </td> <td> $<%= pto.precio %> </td> <td> <img src="<%= pto.thumbail %>" alt="" height="40" width="40"> </td>
                                <% }); %>
                            </tr>
                        <% } else {%>
                            <h3>No hay productos en la lista</h3>
                        <%};%>
            </div>
        <div>
            <a href="/">Agregar un nuevo producto</a>
        </div>
    </div>
</body>
</html>